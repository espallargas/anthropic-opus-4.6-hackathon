# direnv configuration for Claude Opus 4.6 Hackathon
# This file automatically loads environment variables when you cd into this directory

# Load .env.local if it exists (contains sensitive credentials)
if [ -f .env.local ]; then
  dotenv .env.local
fi

# Disable Bedrock for this project (use Anthropic API instead)
unset CLAUDE_CODE_USE_BEDROCK
unset AWS_REGION

# Optional: Set Anthropic model preferences if needed
# export ANTHROPIC_MODEL="claude-opus-4-1-20250805"
# export ANTHROPIC_DEFAULT_OPUS_MODEL="claude-opus-4-1-20250805"

unset ANTHROPIC_DEFAULT_OPUS_MODEL
unset ANTHROPIC_DEFAULT_SONNET_MODEL
unset ANTHROPIC_DEFAULT_HAIKU_MODEL
unset CLAUDE_CODE_SUBAGENT_MODEL

# Rails & Node environment
export RAILS_ENV=development
export NODE_ENV=development
